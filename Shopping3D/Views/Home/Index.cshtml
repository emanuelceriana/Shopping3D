
@{
    ViewBag.Title = "Index";
}

<header class="text-white second-header">
    <div class="container text-center">
        <h1>Welcome to Shopping3D Page!</h1>
        <p class="lead">The best place to get the best products 3D!</p>
    </div>
</header>

<section id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2>About this page</h2>
                <p class="lead">How we are? What we doing?</p>
                <ul>
                    <li>The great quality of ours products.</li>
                    <li>The most simple and creative design.</li>
                    <li>The best prices only in this place</li>
                    <li>Your opportunity to decorate your garden, your room or your house completly</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section id="services" class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2>Services we offer</h2>
                <p class="lead">
                    Our company offers you a space where you can get a huge amount of beautiful objects printed on 3D printers. At an incredible price and a great quality. What are you waiting for! @Html.ActionLink("Start buying!", "Index", "Products", new { }, new { @class = "" })
                </p>
            </div>
        </div>
    </div>
</section>

<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2>Contact us</h2>
                <p class="lead">
                    If you have any questions to ask or want us to design a product just for you, do not hesitate to contact us at our number <a class="a">+54 381 66 79 534</a> or mail <a class="a">shopping3D@gmail.com</a>
                </p>
            </div>
        </div>
    </div>
</section>

    
