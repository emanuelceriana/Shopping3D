@model IEnumerable<Shopping3D.Models.Product>

@{
    ViewBag.Title = "Index";
}
<div class="container">

        <div class="col-lg-12">

            <div class="row">

                @foreach (var item in Model)
                {
                    
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <a href="#"><img class="card-img-top" src="@Url.Content(item.Image)" alt="@Html.DisplayFor(modelItem => item.Name)"></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="#">@Html.DisplayFor(modelItem => item.Name)</a>
                                </h4>
                                <h5>@Html.DisplayFor(modelItem => item.Price)</h5>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                            </div>
                            <div class="card-footer">
                                <span class="glyphicon glyphicon-shopping-cart"></span>
                                @Html.ActionLink("🛒 - Add to Cart", "Add", "Cart", new { id = item.Id }, new { @class = "btn btn-carrito" })
                            </div>
                        </div>
                    </div>
                }

            </div>
            <!-- /.row -->
        </div>
        <!-- /.col-lg-9 -->
    </div>
    <!-- /.row -->


