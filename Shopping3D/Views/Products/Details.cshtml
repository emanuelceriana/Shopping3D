@model Shopping3D.Models.Product

@{
    ViewBag.Title = "Details";
}
<br />
<br />
<div class="container">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
           
        </div>
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-6 mb-4">
            <h3 class="page-header text-center">@Model.Name</h3>
            <!-- There's only One image -->
            <div class="">
                <div class="main-product-image">
                    <img src="@Url.Content(Model.Image)" alt="@Model.Name" class="img-fluid">
                </div>
            </div>

        </div>

        <div class="col-sm-12 col-md-12 col-lg-6">
            <div class="col-sm-12">
               
                    <div>

                        <!-- Product Price  -->
                        <div class="form-group price_elem row">
                            <label class="col-sm-3 col-md-3 form-control-label nopaddingtop">Price:</label>
                            <div class="col-sm-8 col-md-9">
                                <span class="product-form-price" id="product-form-price">$ @Model.Price</span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-3 col-md-3 form-control-label">Description:</label>
                            <div class="col-sm-8 col-md-9 description">
                                <p>@Model.Description&nbsp;</p>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Quantity" class="col-sm-3 col-md-3 form-control-label">Stock:</label>
                            <div class="col-sm-8 col-md-9">
                                <p>@Model.Quantity</p>
                            </div>
                        </div>

                        <div class="form-group row">

                            <label for="Quantity" class="col-sm-3 col-md-3 form-control-label">Quantity</label>
                            <div class="col-sm-8 col-md-9">

                                @using (Html.BeginForm("Add", "Cart"))
                                {
                                    <input type="hidden" name="id" value="@Model.Id" id="hdnFlag" />
                                    <p><input class="form-control" name="quantity" type="number" value="1" /></p>
                                    <p><input type="submit" value="🛒 - Add to Cart" id="btnSubmit" class="btn btn-carrito" /></p>
                                }
                                    <p>@Html.ActionLink("← Continue Shopping", "Index", new { }, new { @class = "btn btn-volver" })</p>
                                

                            </div>
                        </div>
                         
                    </div>
            
            </div>
            </div>
        </div>
    </div>